@model Dictionary<int, Contact>

<h1>
    Lista kontaktów
</h1>
<a class="btn btn-primary" asp-controller="Contact" asp-action="Create">
    Utwórz kontakt
</a>

<table class="table">
    <thead>
    <tr>
        <th>Imię</th>
        <th>Email</th>
        <th>Akcje</th>
    </tr>
    </thead>
    <tbody>
        @foreach(var item in @Model)
        {
            <tr>
                <td>
                    @item.Value.Name
                </td>
                <td>
                    @item.Value.Email
                </td>
                <td>
                    <a class="btn btn-outline-primary" asp-controller="Contact" asp-action="Update" asp-route-id="@item.Key">Edytuj</a>
                    <a class="btn btn-outline-info" asp-controller="Contact" asp-action="Details" asp-route-id="@item.Key">Szczegóły</a>
                    <a class="btn btn-outline-danger" asp-controller="Contact" asp-action="Delete" asp-route-id="@item.Key">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>